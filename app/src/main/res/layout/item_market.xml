<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="center"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgThumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:maxLines="2"
        android:textSize="15sp"
        android:textColor="?attr/colorOnPrimary"
        tool:text = "아껴오던 소장 물품 판매 합니다. 아껴오던 소장 물품 판매 합니다. 아껴오던 소장 물품 판매 합니다."
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        tool:text = "5분전"
        />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/txtTitle"
        app:layout_constraintTop_toBottomOf="@id/txtDate"
        app:layout_constraintEnd_toEndOf="@id/txtTitle"
        android:layout_height="wrap_content"
        tool:text = "99999999999999999999999 원"
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="?attr/colorOnPrimary"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:id="@+id/layoutTalkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_baseline_forum_24"
                />
            <TextView
                android:id="@+id/txtTalkCount"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="1"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_baseline_favorite_border_24"/>

            <TextView
                android:id="@+id/txtLikeCount"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="1"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>